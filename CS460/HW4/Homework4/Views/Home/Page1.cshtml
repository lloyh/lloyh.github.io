
@{
    ViewBag.Title = "Page1";

}

<h2>Page 1: Temperature Conversion (Get Method)</h2>

<div>
    
    <form action="~/Home/Page1">
        <div class="form-group row">
            <label for="value" class="col-sm-2 col-form-label">
                Enter Temperature:
            </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="temperature" placeholder="temperature">
            </div>
        </div>

        <div class="form-group row">
            <label for="value" class="col-sm-2 col-form-label">
                Temperature Unit:
            </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="unit" placeholder="unit (F or C)">
            </div>
        </div>        
       
        <!-- Calculate button (submits the form input)  -->
        <div class="form-group row">
            <input type="submit" value="Submit" formmethod="get"/>
        </div>

    </form>

</div>

@* The result is returned at the bottom of the page *@
<p>
    @ViewBag.response          
</p>



